<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"

    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:layout_marginBottom="8dp"

    card_view:cardBackgroundColor="@color/myWhite"
    card_view:cardCornerRadius="3dp"
    card_view:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="4dp">

            <ImageView
                android:id="@+id/card_view_wallet_icon"

                android:layout_width="54dp"
                android:layout_height="54dp"

                android:alpha="0.87"/>

            <LinearLayout
                android:layout_marginStart="70dp"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:layout_marginEnd="96dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/card_view_wallet_name"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"

                    android:text="Total Balance"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title"
                    android:textStyle="bold"
                    android:alpha="0.87"
                    />

                <TextView
                    android:id="@+id/card_view_wallet_currency"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:gravity="center"

                    android:text="BGN"
                    android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                    android:textStyle="italic"
                    android:alpha="0.87"
                    />

            </LinearLayout>

            <TextView
                android:id="@+id/card_view_wallet_created"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:gravity="center"

                android:text=""
                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                android:alpha="0.54"
                />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/cv_ll_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp"
            android:weightSum="100">

            <LinearLayout
                android:id="@+id/cv_ll_bottom_left"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:layout_marginEnd="1dp"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp">
                    <ImageView
                        android:id="@+id/card_view_wallet_income_img"

                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="16dp"

                        android:alpha="0.87"
                        android:src="@drawable/arrow_down_income_green"/>

                    <TextView
                        android:id="@+id/card_view_wallet_income_amount"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="16dp"

                        android:text="3 222 560.68"
                        android:textStyle="bold"
                        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                        android:textColor="@color/primaryColorDark"
                        android:alpha="1"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/card_view_wallet_expense_img"

                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="16dp"


                        android:alpha="0.87"
                        android:src="@drawable/arrow_up_expense_red"/>

                    <TextView
                        android:id="@+id/card_view_wallet_expense_amount"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="16dp"

                        android:text="22 560.68"
                        android:textStyle="bold"
                        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                        android:textColor="@color/accentColor"
                        android:alpha="1"/>
                </RelativeLayout>
            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"

                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp"

                android:background="@color/accentColor"
                android:alpha="0.54"/>


            <LinearLayout
                android:id="@+id/cv_ll_right"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:layout_marginStart="3dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/card_view_wallet_balance"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:gravity="center"

                    android:text="3 200 000. 00"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title"
                    android:textStyle="bold"
                    android:textColor="@color/primaryColorDark"
                    android:alpha="1"/>

                <TextView
                    android:id="@+id/card_view_wallet_last_transaction"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"

                    android:text="Since 12/03/2016"
                    android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                    android:alpha="0.54"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>


