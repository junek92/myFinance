<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

            <android.support.v7.widget.Toolbar
                android:id="@+id/pie_monthly_toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"

                app:navigationContentDescription="@string/abc_action_bar_up_description"
                app:navigationIcon="?homeAsUpIndicator"

                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>
        </android.support.design.widget.AppBarLayout>

        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/pie_monthly_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="8dp"

                android:text="@string/main_date"
                android:textColor="#000000"
                android:gravity="center"
                android:alpha="0.54"
                android:fontFamily="sans-serif-black"
                android:textSize="24sp"
                />
            <com.github.mikephil.charting.charts.PieChart
                android:id="@+id/pie_monthly_pieChart"

                android:layout_below="@+id/pie_monthly_date"
                android:layout_width="match_parent"
                android:layout_height="360dp" />

            <TextView
                android:id="@+id/pie_monthly_textBalance"
                android:elevation="2dp"

                android:layout_width="128dp"
                android:layout_height="54dp"

                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="24dp"
                android:background="#000000"

                android:text="@string/main_def_balance"
                android:textColor="@color/myWhite"
                android:fontFamily="sans-serif-bold"
                android:textSize="16sp"
                android:gravity="center"
                android:alpha="0.87"

                android:clickable="true"
                android:onClick="DetailActivity"/>

            <Button
                android:id="@+id/pie_monthly_btn_addDebit"
                android:elevation="2dp"

                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="24dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/button_circle_red"
                android:onClick="addDebit"



                android:text="@string/main_addDebit"
                android:fontFamily="sans-serif-medium"
                android:textSize="50sp"
                android:textStyle="bold"
                android:textScaleX="1.5"
                android:gravity="center_horizontal|top"
                android:textColor="@color/myWhite"/>

            <Button
                android:id="@+id/pie_monthly_btn_addCredit"
                android:elevation="2dp"

                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_marginStart="24dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/button_circle_green"
                android:onClick="addCredit"



                android:text="@string/main_addCredit"
                android:fontFamily="sans-serif-medium"
                android:textSize="51sp"
                android:gravity="center_horizontal|top"
                android:textColor="@color/myWhite"/>
        </RelativeLayout>
    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>