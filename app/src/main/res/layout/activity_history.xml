<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/history_app_bar"

        layout="@layout/app_bar" />

    <android.support.v4.widget.DrawerLayout
        android:id="@+id/history_drawer_layout"

        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/history_text"

                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:gravity="center_vertical"
                android:layout_marginStart="72dp"

                android:text="@string/history_select"
                android:textColor="#000000"
                android:alpha="0.54"
                android:fontFamily="sans-serif-black"
                android:textSize="24sp"/>

            <ListView
                android:id="@+id/history_month_list"


                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/myWhite"
                android:layout_below="@id/history_text"

                android:padding="16dp"
                android:dividerHeight="2dp"/>
        </RelativeLayout>
        <!-- Side navigation drawer UI -->
        <ListView
                android:id="@+id/history_navList"

                android:layout_width="240dp"
                android:layout_height="match_parent"
                android:layout_gravity="start"
                android:background="#ffffff"
                android:choiceMode="singleChoice"
                android:elevation="18dp"

                android:divider="@color/myWhite"
                android:dividerHeight="8dp"/>
    </android.support.v4.widget.DrawerLayout>

</LinearLayout>
